{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "suppressImplicitAnyIndexErrors": true,
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
