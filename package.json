{
  "name": "cypher-query-builder",
  "version": "2.0.0",
  "description": "An intuitive, easy to use query builder for Neo4j and Cypher",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "webpack --progress",
    "build:prod": "webpack --progress --env.production",
    "test": "nyc --reporter=text --reporter=html mocha src/*.spec.ts src/**/*.spec.ts",
    "test:ci": "nyc --reporter=lcov --reporter=text mocha src/*.spec.ts src/**/*.spec.ts",
    "release": "./scripts/release.sh"
  },
  "keywords": [
    "cypher",
    "query",
    "builder",
    "neo4j"
  ],
  "author": "James Ferguson",
  "license": "MIT",
  "dependencies": {
    "@types/chai": "^4.0.4",
    "@types/chai-as-promised": "^7.1.0",
    "@types/lodash": "^4.14.77",
    "@types/mocha": "^2.2.43",
    "@types/node": "^8.0.33",
    "@types/sinon": "^4.1.2",
    "chai-as-promised": "^7.0.0",
    "coveralls": "^3.0.0",
    "lodash": "^4.17.4",
    "neo4j-driver": "^1.5.0",
    "node-cleanup": "^2.1.2",
    "sinon": "^4.1.3",
    "source-map-support": "^0.5.0",
    "ts-loader": "^3.1.1",
    "ts-node": "^4.1.0",
    "typescript": "^2.5.3",
    "uglifyjs-webpack-plugin": "^0.4.6",
    "webpack": "^3.6.0"
  },
  "devDependencies": {
    "chai": "^4.0.2",
    "mocha": "^4.0.1",
    "nyc": "^11.4.1"
  },
  "nyc": {
    "all": true,
    "produce-source-map": true,
    "report-dir": "./coverage",
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.ts",
      "**/*.mock.ts"
    ]
  }
}
